<Window x:Class="MvvmScarletToolkit.Avalonia.Samples.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:features="clr-namespace:MvvmScarletToolkit.Avalonia.Samples.Features"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MvvmScarletToolkit.Avalonia.Samples"
        d:DesignHeight="450"
        d:DesignWidth="800"
        x:DataType="features:NavigationViewModel"
        Icon="/Assets/avalonia-logo.ico"
        mc:Ignorable="d">
    <Grid ColumnDefinitions="Auto,4,*">
        <ListBox Grid.Column="0"
                 DisplayMemberBinding="{Binding Localization.Value}"
                 ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedItem}" />
        <ContentControl Grid.Column="2" Content="{Binding SelectedItem.Content}" />
    </Grid>
</Window>
