<UserControl x:Class="MvvmScarletToolkit.Wpf.Samples.Controls.DragAndDrop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MvvmScarletToolkit.Wpf.Samples.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:feature="clr-namespace:MvvmScarletToolkit.Wpf.Samples.Features"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:image="clr-namespace:MvvmScarletToolkit.Wpf.Samples.Features.Image"
             xmlns:local="clr-namespace:MvvmScarletToolkit.Wpf.Samples"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://SoftThorn.MvvmScarletToolkit.com/winfx/xaml/shared"
             d:DataContext="{d:DesignInstance Type=feature:ProcessingImagesViewModel,
                                              IsDesignTimeCreatable=False}"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>

        <ListBox x:Name="SourceList"
                 Grid.Column="0"
                 HorizontalContentAlignment="Center"
                 AllowDrop="True"
                 Drop="SourceList_Drop"
                 ItemsSource="{Binding Source.Items, Mode=OneTime}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <i:InvokeCommandAction Command="{Binding Source.LoadCommand, Mode=OneWay}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <ListBox.ItemContainerStyle>
                <Style BasedOn="{StaticResource {x:Type ListBoxItem}}" TargetType="{x:Type ListBoxItem}">
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                </Style>
            </ListBox.ItemContainerStyle>

            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type image:ImageViewModel}">
                    <Grid GiveFeedback="Element_GiveFeedback" MouseMove="Element_MouseMove">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="250" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="4" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Button Grid.Row="1"
                                Command="{Binding MoveToTargetCommand, Mode=OneWay}"
                                Content="&gt;" />

                        <controls:ImagePlaceholder Grid.Row="1"
                                                   Grid.Column="2"
                                                   Width="90"
                                                   Height="90" />

                        <TextBlock Grid.Row="1"
                                   Grid.Column="4"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis">
                            <Run Text="{Binding DisplayName, Mode=OneWay}" />
                            <LineBreak />
                            <Run Text="{Binding Path, Mode=OneWay}" />
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <!--<ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <Border Padding="{TemplateBinding Control.Padding}"
                            Background="{TemplateBinding Panel.Background}"
                            BorderBrush="{TemplateBinding Border.BorderBrush}"
                            BorderThickness="{TemplateBinding Border.BorderThickness}"
                            SnapsToDevicePixels="True">
                        <ScrollViewer Padding="{TemplateBinding Control.Padding}"
                                      CanContentScroll="true"
                                      Focusable="False"
                                      IsDeferredScrollingEnabled="false">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </ItemsControl.Template>-->

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel IsItemsHost="True"
                                            IsVirtualizing="True"
                                            Orientation="Vertical"
                                            VirtualizationMode="Standard" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ListBox>

        <Grid Grid.RowSpan="3"
              Grid.Column="2"
              DataContext="{Binding Target, Mode=OneTime}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
            </Grid.RowDefinitions>

            <ListBox x:Name="TargetList"
                     AllowDrop="True"
                     Drop="TargetList_Drop"
                     ItemsSource="{Binding Items}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectedItem="{Binding SelectedItem}"
                     SelectionMode="Extended">
                <ListBox.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget, RelativeSource={x:Static RelativeSource.Self}}">
                        <MenuItem Command="{Binding DataContext.RemoveRangeCommand}"
                                  CommandParameter="{Binding DataContext.SelectedItems}"
                                  Header="Remove selected" />

                        <MenuItem Command="{Binding DataContext.RemoveCommand}"
                                  CommandParameter="{Binding DataContext.SelectedItem}"
                                  Header="Remove" />
                    </ContextMenu>
                </ListBox.ContextMenu>

                <i:Interaction.Behaviors>
                    <mvvm:MultiListBoxSelectionBehavior SelectedItems="{Binding SelectedItems}" />
                </i:Interaction.Behaviors>

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type image:ImageViewModel}">
                        <Grid Width="200"
                              Height="200"
                              GiveFeedback="Element_GiveFeedback"
                              MouseMove="Element_MouseMove">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <controls:ImagePlaceholder Grid.RowSpan="4"
                                                       Width="200"
                                                       Height="200" />

                            <Border Grid.Row="0" Opacity="0.75">
                                <TextBlock Margin="0 4"
                                           DockPanel.Dock="Top"
                                           Text="{Binding DisplayName}"
                                           TextAlignment="Center" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Grid Grid.RowSpan="4"
                  Grid.Column="2"
                  DataContext="{Binding SelectedItem}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="800" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <controls:ImagePlaceholder Grid.Row="0"
                                           Width="800"
                                           Height="800" />

                <TextBlock Grid.Row="2" TextTrimming="CharacterEllipsis">
                    <Run FontWeight="DemiBold" Text="DisplayName: " />
                    <Run Text="{Binding DisplayName, Mode=OneWay}" />
                    <LineBreak />
                    <Run FontWeight="DemiBold" Text="Path: " />
                    <Run Text="{Binding Path, Mode=OneWay}" />
                </TextBlock>
            </Grid>

            <StackPanel Grid.Row="2"
                        DockPanel.Dock="Bottom"
                        Orientation="Horizontal">
                <Button Margin="0 0 4 0"
                        Command="{Binding RemoveRangeCommand, Mode=OneWay}"
                        CommandParameter="{Binding ElementName=TargetList, Path=SelectedItems}"
                        Content="Remove" />
                <Button Command="{Binding ClearCommand, Mode=OneWay}" Content="Clear" />
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="2"
                   HorizontalAlignment="Right"
                   Text="{Binding Source.Count, StringFormat='{}{0} Images'}" />
    </Grid>
</UserControl>
