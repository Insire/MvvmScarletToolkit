<UserControl x:Class="MvvmScarletToolkit.Wpf.Samples.Features.FileBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:MvvmScarletToolkit.Wpf.Samples.Features"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://SoftThorn.MvvmScarletToolkit.com/winfx/xaml/shared"
             d:DataContext="{d:DesignInstance Type=mvvm:FileSystemViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <PathGeometry x:Key="FilePath">M369.9 97.9L286 14C277 5 264.8-.1 252.1-.1H48C21.5 0 0 21.5 0 48v416c0 26.5 21.5 48 48 48h288c26.5 0 48-21.5 48-48V131.9c0-12.7-5.1-25-14.1-34zM332.1 128H256V51.9l76.1 76.1zM48 464V48h160v104c0 13.3 10.7 24 24 24h104v288H48z</PathGeometry>
        <PathGeometry x:Key="FolderPath">M464 128H272l-54.63-54.63c-6-6-14.14-9.37-22.63-9.37H48C21.49 64 0 85.49 0 112v288c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V176c0-26.51-21.49-48-48-48zm0 272H48V112h140.12l54.63 54.63c6 6 14.14 9.37 22.63 9.37H464v224z</PathGeometry>
        <PathGeometry x:Key="DrivePath">M567.403 235.642L462.323 84.589A48 48 0 0 0 422.919 64H153.081a48 48 0 0 0-39.404 20.589L8.597 235.642A48.001 48.001 0 0 0 0 263.054V400c0 26.51 21.49 48 48 48h480c26.51 0 48-21.49 48-48V263.054c0-9.801-3-19.366-8.597-27.412zM153.081 112h269.838l77.913 112H75.168l77.913-112zM528 400H48V272h480v128zm-32-64c0 17.673-14.327 32-32 32s-32-14.327-32-32 14.327-32 32-32 32 14.327 32 32zm-96 0c0 17.673-14.327 32-32 32s-32-14.327-32-32 14.327-32 32-32 32 14.327 32 32z</PathGeometry>

        <Style x:Key="PathStyle" TargetType="{x:Type Path}">
            <Setter Property="Fill" Value="#777" />
            <Setter Property="Stroke" Value="#777" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAccessProhibited}" Value="True">
                    <Setter Property="Fill" Value="Red" />
                    <Setter Property="Stroke" Value="Red" />
                </DataTrigger>

                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="Fill" Value="#CCC" />
                    <Setter Property="Stroke" Value="#CCC" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="FolderIconPath" DataType="{x:Type mvvm:ScarletDirectory}">
            <Path Width="16"
                  Height="16"
                  Data="{StaticResource FolderPath}"
                  Stretch="Uniform"
                  StrokeThickness="1"
                  Style="{StaticResource PathStyle}" />
        </DataTemplate>
        <DataTemplate x:Key="FileIconPath" DataType="{x:Type mvvm:ScarletFile}">
            <Path Width="16"
                  Height="16"
                  Data="{StaticResource FilePath}"
                  Stretch="Uniform"
                  StrokeThickness="1"
                  Style="{StaticResource PathStyle}" />
        </DataTemplate>
        <DataTemplate x:Key="DriveIconPath" DataType="{x:Type mvvm:ScarletDrive}">
            <Path Width="16"
                  Height="16"
                  Data="{StaticResource DrivePath}"
                  Stretch="Uniform"
                  StrokeThickness="1"
                  Style="{StaticResource PathStyle}" />
        </DataTemplate>

        <ItemsControl x:Key="PropertyList"
                      x:Shared="false"
                      Grid.IsSharedSizeScope="True"
                      ItemsSource="{Binding Properties}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type mvvm:PropertyViewModel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="PropertyDisplayName" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding DisplayName, Mode=OneWay, StringFormat={}{0}:}" />
                        <TextBlock Grid.Column="2"
                                   Text="{Binding Value, Mode=OneWay}"
                                   TextTrimming="CharacterEllipsis" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ToolTip x:Key="PropertyTooltip" Content="{StaticResource PropertyList}" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MaxWidth="300" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" MaxWidth="300" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TreeView Grid.Row="0"
                  Grid.Column="0"
                  HorizontalAlignment="Stretch"
                  ItemsSource="{Binding Items}"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TreeView.Resources>
                <Style x:Key="{x:Type TreeViewItem}"
                       BasedOn="{StaticResource {x:Type TreeViewItem}}"
                       TargetType="{x:Type TreeViewItem}">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="FocusVisualStyle" Value="{StaticResource TreeViewItemFocusVisual}" />
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="IsExpanded" Value="{Binding IsToggled, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="Padding" Value="1 0 0 0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="19" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <!--  Toggle  -->
                                    <CheckBox x:Name="PART_Expander"
                                              ClickMode="Press"
                                              IsChecked="{Binding IsToggled, Mode=TwoWay}" />

                                    <!--  Toggle Title  -->
                                    <Border Name="Bd"
                                            Grid.Column="1"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter x:Name="PART_Header"
                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          ContentSource="Header">
                                            <ContentPresenter.Style>
                                                <Style TargetType="{x:Type ContentPresenter}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLoaded, Mode=OneWay}" Value="True">
                                                            <Setter Property="ToolTip" Value="{StaticResource PropertyTooltip}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsLoaded, Mode=OneWay}" Value="False">
                                                            <Setter Property="ToolTip">
                                                                <Setter.Value>
                                                                    <ToolTip>
                                                                        <StackPanel Orientation="Vertical">
                                                                            <TextBlock Text="{Binding IsLoaded, StringFormat={}IsLoaded: {0}, Mode=OneWay}" />
                                                                        </StackPanel>
                                                                    </ToolTip>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentPresenter.Style>
                                            <ContentPresenter.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Command="{Binding RefreshCommand}" Header="Refresh" />
                                                </ContextMenu>
                                            </ContentPresenter.ContextMenu>
                                        </ContentPresenter>
                                    </Border>

                                    <!--  Children  -->
                                    <ItemsPresenter x:Name="PART_ItemsHost"
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Grid.ColumnSpan="2" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsExpanded" Value="false">
                                        <Setter TargetName="PART_ItemsHost" Property="Visibility" Value="Collapsed" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                </Style>

                <HierarchicalDataTemplate DataType="{x:Type mvvm:ScarletDirectory}" ItemsSource="{Binding Containers}">
                    <DockPanel ToolTip="{StaticResource PropertyTooltip}">
                        <ContentControl ContentTemplate="{StaticResource FolderIconPath}" DockPanel.Dock="Left" />
                        <TextBlock Margin="5 0 0 0"
                                   Text="{Binding Name}"
                                   TextTrimming="CharacterEllipsis" />
                    </DockPanel>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate DataType="{x:Type mvvm:ScarletDrive}" ItemsSource="{Binding Containers}">
                    <DockPanel ToolTip="{StaticResource PropertyTooltip}">
                        <ContentControl ContentTemplate="{StaticResource DriveIconPath}" DockPanel.Dock="Left" />
                        <TextBlock Margin="5 0 0 0"
                                   Text="{Binding Name}"
                                   TextTrimming="CharacterEllipsis" />
                    </DockPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <i:InvokeCommandAction Command="{Binding RefreshCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TreeView>

        <GridSplitter Grid.Row="0"
                      Grid.Column="1"
                      Width="8"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch" />

        <ContentControl Grid.Row="0" Grid.Column="2">
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedTreeDetail, Converter={mvvm:IsNull}}" Value="True">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ContentControl}">
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Text="nothing selected..." />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ContentControl}">
                                <ContentPresenter Content="{Binding SelectedTreeDetail}">
                                    <ContentPresenter.Resources>
                                        <DataTemplate DataType="{x:Type mvvm:ScarletFile}">
                                            <Grid Width="100"
                                                  Background="Transparent"
                                                  ToolTip="{StaticResource PropertyTooltip}">
                                                <Grid.InputBindings>
                                                    <MouseBinding Command="{Binding SelectCommand}" MouseAction="LeftDoubleClick" />
                                                </Grid.InputBindings>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>

                                                <Path Grid.Row="0"
                                                      Width="66"
                                                      Height="66"
                                                      Data="{StaticResource FilePath}"
                                                      Stretch="Uniform"
                                                      StrokeThickness="1">
                                                    <Path.Style>
                                                        <Style BasedOn="{StaticResource PathStyle}" TargetType="{x:Type Path}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsImage}" Value="false">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Path.Style>
                                                </Path>

                                                <Image Grid.Row="0"
                                                       Width="66"
                                                       Height="66"
                                                       RenderOptions.BitmapScalingMode="HighQuality"
                                                       RenderOptions.EdgeMode="Aliased"
                                                       SnapsToDevicePixels="True"
                                                       Stretch="Uniform"
                                                       StretchDirection="Both">
                                                    <i:Interaction.Behaviors>
                                                        <mvvm:AsyncImageLoadingBehavior Width="122"
                                                                                        Height="122"
                                                                                        Source="{Binding FullName}" />
                                                    </i:Interaction.Behaviors>

                                                    <Image.Style>
                                                        <Style TargetType="{x:Type Image}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsImage}" Value="true">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>

                                                <TextBlock Grid.Row="1"
                                                           HorizontalAlignment="Center"
                                                           Text="{Binding Name}"
                                                           TextTrimming="CharacterEllipsis" />
                                            </Grid>
                                        </DataTemplate>

                                        <DataTemplate DataType="{x:Type mvvm:ScarletDirectory}">
                                            <ListBox ItemsSource="{Binding Items}"
                                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                     SelectionMode="Extended">
                                                <ListBox.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Command="{Binding RefreshCommand}" Header="Refresh" />
                                                    </ContextMenu>
                                                </ListBox.ContextMenu>

                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <mvvm:VirtualizingWrapPanel IsItemsHost="True" Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>

                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="{x:Type ListBoxItem}">
                                                        <Setter Property="ToolTip" Value="{StaticResource PropertyTooltip}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsBusy}" Value="true">
                                                                <Setter Property="IsEnabled" Value="False" />
                                                                <Setter Property="IsHitTestVisible" Value="False" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>

                                                <ListBox.Resources>
                                                    <DataTemplate DataType="{x:Type mvvm:ScarletDirectory}">
                                                        <DockPanel Width="100" Background="Transparent">
                                                            <DockPanel.InputBindings>
                                                                <MouseBinding Command="{Binding SelectCommand}" MouseAction="LeftDoubleClick" />
                                                            </DockPanel.InputBindings>

                                                            <TextBlock HorizontalAlignment="Center"
                                                                       DockPanel.Dock="Bottom"
                                                                       Text="{Binding Name}"
                                                                       TextTrimming="CharacterEllipsis" />
                                                            <Path Width="66"
                                                                  Height="66"
                                                                  Data="{StaticResource FolderPath}"
                                                                  Stretch="Uniform"
                                                                  StrokeThickness="1"
                                                                  Style="{StaticResource PathStyle}" />
                                                        </DockPanel>
                                                    </DataTemplate>
                                                </ListBox.Resources>
                                            </ListBox>
                                        </DataTemplate>

                                        <DataTemplate DataType="{x:Type mvvm:ScarletDrive}">
                                            <ListBox ItemsSource="{Binding Items}"
                                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                     SelectionMode="Extended">
                                                <ListBox.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Command="{Binding RefreshCommand}" Header="Refresh" />
                                                    </ContextMenu>
                                                </ListBox.ContextMenu>

                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <mvvm:VirtualizingWrapPanel IsItemsHost="True" Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>

                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="{x:Type ListBoxItem}">
                                                        <Setter Property="ToolTip" Value="{StaticResource PropertyTooltip}" />
                                                    </Style>
                                                </ListBox.ItemContainerStyle>

                                                <ListBox.Resources>
                                                    <DataTemplate DataType="{x:Type mvvm:ScarletDirectory}">
                                                        <DockPanel Width="100" Background="Transparent">
                                                            <DockPanel.InputBindings>
                                                                <MouseBinding Command="{Binding SelectCommand}" MouseAction="LeftDoubleClick" />
                                                            </DockPanel.InputBindings>

                                                            <TextBlock HorizontalAlignment="Center"
                                                                       DockPanel.Dock="Bottom"
                                                                       Text="{Binding Name}"
                                                                       TextTrimming="CharacterEllipsis" />
                                                            <Path Width="66"
                                                                  Height="66"
                                                                  Data="{StaticResource FolderPath}"
                                                                  Stretch="Uniform"
                                                                  StrokeThickness="1"
                                                                  Style="{StaticResource PathStyle}" />
                                                        </DockPanel>
                                                    </DataTemplate>
                                                </ListBox.Resources>
                                            </ListBox>
                                        </DataTemplate>
                                    </ContentPresenter.Resources>
                                </ContentPresenter>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <GridSplitter Grid.Row="0"
                      Grid.Column="3"
                      Width="8"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch" />

        <ContentControl Grid.Row="0" Grid.Column="4">
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedDetail, Converter={mvvm:IsNull}}" Value="True">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ContentControl}">
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Text="nothing selected..." />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ContentControl}">
                                <ContentPresenter Content="{Binding SelectedDetail}">
                                    <ContentPresenter.Resources>
                                        <DataTemplate DataType="{x:Type mvvm:ScarletFile}">
                                            <DockPanel LastChildFill="True">
                                                <ContentControl Content="{StaticResource PropertyList}" DockPanel.Dock="Top" />

                                                <Image RenderOptions.BitmapScalingMode="HighQuality"
                                                       RenderOptions.EdgeMode="Aliased"
                                                       SnapsToDevicePixels="True"
                                                       Stretch="Uniform"
                                                       StretchDirection="Both">
                                                    <i:Interaction.Behaviors>
                                                        <mvvm:AsyncImageLoadingBehavior Width="800"
                                                                                        Height="800"
                                                                                        Source="{Binding FullName}" />
                                                    </i:Interaction.Behaviors>

                                                    <Image.Style>
                                                        <Style TargetType="{x:Type Image}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsImage}" Value="true">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </DockPanel>
                                        </DataTemplate>

                                        <DataTemplate DataType="{x:Type mvvm:ScarletDirectory}">
                                            <ContentControl Content="{StaticResource PropertyList}" />
                                        </DataTemplate>
                                    </ContentPresenter.Resources>
                                </ContentPresenter>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <StatusBar Grid.Row="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="5">
            <StatusBarItem Content="Status" />
            <StatusBarItem Content="{Binding SelectedContainer.Name, FallbackValue='No container selected'}" />
            <StatusBarItem Content="{Binding SelectedChild.Name, FallbackValue='No child selected'}" />
        </StatusBar>
    </Grid>
</UserControl>
