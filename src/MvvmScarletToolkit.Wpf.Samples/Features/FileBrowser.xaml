<UserControl x:Class="MvvmScarletToolkit.Wpf.Samples.Features.FileBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:MvvmScarletToolkit.Wpf.Samples.Features"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://SoftThorn.MvvmScarletToolkit.com/winfx/xaml/shared"
             d:DataContext="{d:DesignInstance Type=mvvm:FileSystemViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <TreeView ItemsSource="{Binding Items}">
            <TreeView.Resources>
                <PathGeometry x:Key="FilePath">M369.9 97.9L286 14C277 5 264.8-.1 252.1-.1H48C21.5 0 0 21.5 0 48v416c0 26.5 21.5 48 48 48h288c26.5 0 48-21.5 48-48V131.9c0-12.7-5.1-25-14.1-34zM332.1 128H256V51.9l76.1 76.1zM48 464V48h160v104c0 13.3 10.7 24 24 24h104v288H48z</PathGeometry>
                <PathGeometry x:Key="FolderPath">M464 128H272l-54.63-54.63c-6-6-14.14-9.37-22.63-9.37H48C21.49 64 0 85.49 0 112v288c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V176c0-26.51-21.49-48-48-48zm0 272H48V112h140.12l54.63 54.63c6 6 14.14 9.37 22.63 9.37H464v224z</PathGeometry>
                <PathGeometry x:Key="DrivePath">M567.403 235.642L462.323 84.589A48 48 0 0 0 422.919 64H153.081a48 48 0 0 0-39.404 20.589L8.597 235.642A48.001 48.001 0 0 0 0 263.054V400c0 26.51 21.49 48 48 48h480c26.51 0 48-21.49 48-48V263.054c0-9.801-3-19.366-8.597-27.412zM153.081 112h269.838l77.913 112H75.168l77.913-112zM528 400H48V272h480v128zm-32-64c0 17.673-14.327 32-32 32s-32-14.327-32-32 14.327-32 32-32 32 14.327 32 32zm-96 0c0 17.673-14.327 32-32 32s-32-14.327-32-32 14.327-32 32-32 32 14.327 32 32z</PathGeometry>

                <DataTemplate x:Key="FolderIconPath" DataType="{x:Type mvvm:ScarletDirectory}">
                    <Path Width="16"
                          Height="16"
                          Data="{StaticResource FolderPath}"
                          Stretch="Uniform"
                          Stroke="#777"
                          StrokeThickness="1" />
                </DataTemplate>
                <DataTemplate x:Key="FileIconPath" DataType="{x:Type mvvm:ScarletFile}">
                    <Path Width="16"
                          Height="16"
                          Data="{StaticResource FilePath}"
                          Stretch="Uniform"
                          Stroke="#777"
                          StrokeThickness="1" />
                </DataTemplate>
                <DataTemplate x:Key="DriveIconPath" DataType="{x:Type mvvm:ScarletDrive}">
                    <Path Width="16"
                          Height="16"
                          Data="{StaticResource DrivePath}"
                          Stretch="Uniform"
                          Stroke="#777"
                          StrokeThickness="1" />
                </DataTemplate>

                <Style x:Key="{x:Type TreeViewItem}"
                       BasedOn="{StaticResource {x:Type TreeViewItem}}"
                       TargetType="{x:Type TreeViewItem}">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="FocusVisualStyle" Value="{StaticResource TreeViewItemFocusVisual}" />
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="IsExpanded" Value="{Binding IsToggled, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="Padding" Value="1 0 0 0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="19" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <!--  Toggle  -->
                                    <CheckBox x:Name="PART_Expander"
                                              ClickMode="Press"
                                              IsChecked="{Binding IsToggled, Mode=TwoWay}" />

                                    <!--  Toggle Title  -->
                                    <Border Name="Bd"
                                            Grid.Column="1"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter x:Name="PART_Header"
                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          ContentSource="Header">
                                            <ContentPresenter.Style>
                                                <Style TargetType="{x:Type ContentPresenter}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLoaded, Mode=OneWay}" Value="True">
                                                            <Setter Property="ToolTip">
                                                                <Setter.Value>
                                                                    <ToolTip>
                                                                        <StackPanel Orientation="Vertical">
                                                                            <TextBlock Text="{Binding Name, StringFormat={}Name: {0}, Mode=OneWay}" />
                                                                            <TextBlock Text="{Binding Containers.Count, StringFormat={}Children: {0}, Mode=OneWay}" />
                                                                        </StackPanel>
                                                                    </ToolTip>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsLoaded, Mode=OneWay}" Value="False">
                                                            <Setter Property="ToolTip">
                                                                <Setter.Value>
                                                                    <ToolTip>
                                                                        <StackPanel Orientation="Vertical">
                                                                            <TextBlock Text="{Binding IsLoaded, StringFormat={}IsLoaded: {0}, Mode=OneWay}" />
                                                                        </StackPanel>
                                                                    </ToolTip>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentPresenter.Style>
                                        </ContentPresenter>
                                    </Border>

                                    <!--  Children  -->
                                    <ItemsPresenter x:Name="PART_ItemsHost"
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Grid.ColumnSpan="2" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsExpanded" Value="false">
                                        <Setter TargetName="PART_ItemsHost" Property="Visibility" Value="Collapsed" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                </Style>

                <HierarchicalDataTemplate DataType="{x:Type mvvm:ScarletDirectory}" ItemsSource="{Binding Containers}">
                    <DockPanel>
                        <ContentControl ContentTemplate="{StaticResource FolderIconPath}" DockPanel.Dock="Left" />
                        <TextBlock Margin="5 0 0 0"
                                   Text="{Binding Name}"
                                   TextTrimming="CharacterEllipsis" />
                    </DockPanel>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate DataType="{x:Type mvvm:ScarletDrive}" ItemsSource="{Binding Containers}">
                    <DockPanel>
                        <ContentControl ContentTemplate="{StaticResource DriveIconPath}" DockPanel.Dock="Left" />
                        <TextBlock Margin="5 0 0 0"
                                   Text="{Binding Name}"
                                   TextTrimming="CharacterEllipsis" />
                    </DockPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <i:InvokeCommandAction Command="{Binding RefreshCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TreeView>
    </Grid>
</UserControl>
