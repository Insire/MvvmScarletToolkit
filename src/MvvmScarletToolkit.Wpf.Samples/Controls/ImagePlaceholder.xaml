<UserControl x:Class="MvvmScarletToolkit.Wpf.Samples.Controls.ImagePlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:image="clr-namespace:MvvmScarletToolkit.Wpf.Samples.Features.Image"
             xmlns:local="clr-namespace:MvvmScarletToolkit.Wpf.Samples.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://SoftThorn.MvvmScarletToolkit.com/winfx/xaml/shared"
             Name="this"
             d:DataContext="{d:DesignInstance Type=image:ImageViewModel,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <Grid>
        <Grid.ToolTip>
            <TextBlock>
                <Run Text="{Binding DisplayName, Mode=OneWay}" />
                <LineBreak />
                <Run Text="{Binding Path, Mode=OneWay}" />
            </TextBlock>
        </Grid.ToolTip>

        <Rectangle Width="{Binding Width, ElementName=this}"
                   Height="{Binding Height, ElementName=this}"
                   Fill="LightGray" />

        <Image Width="{Binding Width, ElementName=this}"
               Height="{Binding Height, ElementName=this}"
               RenderOptions.BitmapScalingMode="HighQuality"
               RenderOptions.EdgeMode="Aliased"
               SnapsToDevicePixels="True">
            <i:Interaction.Behaviors>
                <mvvm:AsyncImageLoadingBehavior Width="800"
                                                Height="800"
                                                IsLoading="{Binding IsLoading, Mode=TwoWay, ElementName=this, UpdateSourceTrigger=PropertyChanged}"
                                                Source="{Binding Path}" />
            </i:Interaction.Behaviors>

            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading, ElementName=this}" Value="True">
                            <Setter Property="Visibility" Value="Hidden" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>


        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="40"
                   FontWeight="Light"
                   Text="...">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Hidden" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading, ElementName=this}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
