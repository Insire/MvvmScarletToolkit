<UserControl x:Class="DemoApp.AnotherImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:toolkit="clr-namespace:MvvmScarletToolkit;assembly=MvvmScarletToolkit"
             x:Name="This">
    <UserControl.Resources>
        <toolkit:NullValueConverter x:Key="NullValueConverter" />
    </UserControl.Resources>
    <Image Source="{Binding ImagePath, ElementName=This, Converter={StaticResource NullValueConverter}}" />
</UserControl>
