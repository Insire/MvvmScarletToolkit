<UserControl x:Class="DemoApp.DataGrids"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <!--  DataContext: ParentsViewModel  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Name="SourceGrid"
                  Grid.Row="0"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem}" />

        <DataGrid Grid.Row="2" ItemsSource="{Binding SelectedItem.LogItems.Items}" />

        <Button Grid.Row="4"
                Command="{Binding SelectedItem.AddRangeCommand}"
                Content="Add" />
    </Grid>
</UserControl>
